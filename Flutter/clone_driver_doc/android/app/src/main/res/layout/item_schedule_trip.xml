<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.blure.complexview.ComplexView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin8"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginBottom="2dp"
        android:paddingBottom="2dp"
        app:radius="2dp"
        app:shadow="true"
        app:shadowColor="#E0E0E0"
        app:shadowSpread="1">
        <com.blure.complexview.ComplexView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:color="#FFFFFF"
            app:radius="2dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_height="wrap_content">
                <io.driverdoc.testapp.ui.customview.TextViewLatoRegularBoldNormal
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin8"
                    android:background="@drawable/bg_btn_blue_10"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/margin14"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/margin14"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img2"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_below="@id/tv_name"
                    android:layout_marginStart="@dimen/margin22"
                    android:layout_marginTop="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    app:srcCompat="@drawable/ic_place_black_24dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_below="@id/tv_addr"
                    android:layout_marginStart="@dimen/margin22"
                    android:layout_marginTop="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_addr"
                    app:srcCompat="@drawable/ic_watch_later_black_24dp" />
                <io.driverdoc.testapp.ui.customview.TextViewLatoRegularBoldNormal
                    android:id="@+id/tv_addr"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin40"
                    android:maxLines="3"
                    android:textColor="@color/black_505"
                    android:textSize="@dimen/size16sp"
                    app:layout_constraintBottom_toBottomOf="@id/img2"
                    app:layout_constraintLeft_toRightOf="@id/img2"
                    app:layout_constraintTop_toTopOf="@id/img2" />

                <io.driverdoc.testapp.ui.customview.TextViewLatoRegularBoldNormal
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_addr"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin40"
                    android:textColor="@color/black_505"
                    android:textSize="@dimen/size16sp"
                    app:layout_constraintBottom_toBottomOf="@id/img"
                    app:layout_constraintLeft_toRightOf="@id/img"
                    app:layout_constraintTop_toTopOf="@id/img" />

                <io.driverdoc.testapp.ui.customview.TextViewLatoRegularBoldNormal
                    android:id="@+id/tv_time2"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin10"
                    android:layout_marginEnd="@dimen/margin40"
                    android:textColor="@color/black_505"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/size16sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_time"
                    app:layout_constraintLeft_toRightOf="@id/img"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin20"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrowright_white" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.blure.complexview.ComplexView>
    </com.blure.complexview.ComplexView>
</layout>
